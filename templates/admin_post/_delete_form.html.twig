<form method="post" action="{{ path('app_admin_post_delete', {'id': post.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
    <button class="btn py-2 px-4 bg-dark text-white text-decoration-none rounded-4">Delete</button>
</form>
