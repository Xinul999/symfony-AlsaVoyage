{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <div class="m-2">
    <h1>Post index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>DateHeureCreation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.titre }}</td>
                <td>{{ post.contenu }}</td>
                <td>{{ post.dateHeureCreation ? post.dateHeureCreation|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_post_show', {'id': post.id}) }}">show</a>
                    <a href="{{ path('app_admin_post_edit', {'id': post.id}) }}">edit</a>
                    <a href="{{ path('app_admin_post_delete', {'id': post.id}) }}">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_post_new') }}" class="py-2 px-4 bg-dark text-white text-decoration-none rounded-4">Create new</a>
    </div>
{% endblock %}
