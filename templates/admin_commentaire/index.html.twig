{% extends 'base.html.twig' %}

{% block title %}Commentaire index{% endblock %}

{% block body %}
    <h1>Commentaire index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateHeureCreation</th>
                <th>Contenu</th>
                <th>Signale</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commentaire in commentaires %}
            <tr>
                <td>{{ commentaire.id }}</td>
                <td>{{ commentaire.dateHeureCreation ? commentaire.dateHeureCreation|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ commentaire.contenu }}</td>
                <td>{{ commentaire.signale ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_admin_commentaire_show', {'id': commentaire.id}) }}">show</a>
                    <a href="{{ path('app_admin_commentaire_edit', {'id': commentaire.id}) }}">edit</a>
                    <a href="{{ path('app_admin_commentaire_delete', {'id': commentaire.id}) }}">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_commentaire_new') }}">Create new</a>
{% endblock %}
