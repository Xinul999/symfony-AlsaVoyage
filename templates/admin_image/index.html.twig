{% extends 'base.html.twig' %}

{% block title %}Image index{% endblock %}

{% block body %}
    <div class="m-2">
    <h1>Image index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomImage</th>
                <th>Chemin</th>
                <th>MimeType</th>
                <th>DateUpload</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for image in images %}
            <tr>
                <td>{{ image.id }}</td>
                <td>{{ image.nomImage }}</td>
                <td>{{ image.chemin }}</td>
                <td>{{ image.mimeType }}</td>
                <td>{{ image.dateUpload ? image.dateUpload|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_image_show', {'id': image.id}) }}">show</a>
                    <a href="{{ path('app_admin_image_edit', {'id': image.id}) }}">edit</a>
                    <a href="{{ path('app_admin_image_delete', {'id': image.id}) }}">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_image_new') }}" class="py-2 px-4 bg-dark text-white text-decoration-none rounded-4">Create new</a>
    </div>
{% endblock %}
